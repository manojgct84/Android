<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.infogen.cs.com.infogenfirstapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="userName"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true" />

        <Button
            android:id="@+id/mainLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pwd"
            android:layout_margin="15dp"
            android:background="@color/colorAccent"
            android:text="mainLogin" />

        <Button
            android:id="@+id/second_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainLogin"
            android:layout_margin="15dp"
            android:background="@color/colorPrimary"
            android:text="@string/second" />

        <Button
            android:id="@+id/third_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_1"
            android:layout_margin="15dp"
            android:background="@color/colorPrimary"
            android:text="@string/third" />


        <Button
            android:id="@+id/fourth_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/third_1"
            android:layout_margin="15dp"
            android:background="@color/colorPrimary"
            android:text="@string/fourth" />

        <Button
            android:id="@+id/five_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fourth_1"
            android:layout_margin="15dp"
            android:background="@color/colorPrimary"
            android:text="@string/five" />

    </RelativeLayout>

</ScrollView>



